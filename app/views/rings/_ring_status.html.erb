<!-- 未着手 -->
<% if ring.waiting? %>
	<%= link_to "未着手", ring_waiting_path(ring), method: :put, class: "status-btn float-left status-on-grey", onclick: "ga('send', 'event', 'rings', 'change_status_not_started', '')", remote: true %>
<% else %>
	<%= link_to "未着手", ring_waiting_path(ring), method: :put, class: "status-btn float-left status-off-grey", onclick: "ga('send', 'event', 'rings', 'change_status_not_started', '')", remote: true %>
<% end %>

