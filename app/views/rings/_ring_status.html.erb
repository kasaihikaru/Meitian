<!-- 未着手 -->
<% if ring.waiting? %>
	<%= link_to "未着手", ring_waiting_path(ring), method: :put, class: "status-btn float-left status-grey", remote: true %>
<% else %>
	<%= link_to "未着手", ring_waiting_path(ring), method: :put, class: "status-btn float-left status-hover-grey", remote: true %>
<% end %>

<!-- 勉強中 -->
<% if ring.working? %>
	<%= link_to "勉強中", ring_working_path(ring), method: :put, class: "status-btn float-left status-red", remote: true %>
<% else %>
	<%= link_to "勉強中", ring_working_path(ring), method: :put, class: "status-btn float-left status-hover-red", remote: true %>
<% end %>

<!-- 要復習 -->
<% if ring.review_needed? %>
	<%= link_to "要復習", ring_review_needed_path(ring), method: :put, class: "status-btn float-left status-point", remote: true %>
<% else %>
	<%= link_to "要復習", ring_review_needed_path(ring), method: :put, class: "status-btn float-left status-hover-point", remote: true %>
<% end %>

<!-- 完了！ -->
<% if ring.completed? %>
	<%= link_to "完了！", ring_completed_path(ring), method: :put, class: "status-btn float-left status-green", remote: true %>
<% else %>
	<%= link_to "完了！", ring_completed_path(ring), method: :put, class: "status-btn float-left status-hover-green", remote: true %>
<% end %>