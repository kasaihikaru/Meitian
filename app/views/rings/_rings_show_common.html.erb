<div class='clearfix'>
	<div class='psr-show-user float-left'>
		<%= link_to user_path(user) do %>
			<% if user.image? %>
			  <%= image_tag user.image.url, :alt => "icon", :class=>"smallicon center" %>
			<% else %>
				 <img alt="no-icon" src="/images/no-icon.png" class="smallicon">
			<% end %>
		<% end %>
	</div>
	<div class='psr-show-user float-left margin-l-10'>
		<%= link_to user_path(user) do %>
			<%= user.name %>
		<% end %>
	</div>
	<% if user == current_user %>
		<div class='edit-btn float-right'>
			<%= link_to edit_ring_path(ring) do %>
				<%= render :partial => 'svg/edit_sm' %>
			<% end %>
		</div>
	<% end %>
</div>
<% if user_signed_in? && @user != current_user %>
	<%= link_to "コピー", ring_copy_path(@ring), method: :post, class: "form-send-btn prevent_double_click float-right margin-b-20 visible-lg visible-md", remote: true %>
	<%= link_to "コピー", ring_copy_path(@ring), method: :post, class: "form-send-btn prevent_double_click action-float-btn visible-xs visible-sm", remote: true %>
<% end %>


<!-- 単語帳の名前 -->
<h1><%= @ring.name%></h1>

<!-- ステータス部分 -->
<div class="status-btns clearfix" id="ring-status-btns">
	<%= render :partial => 'rings/ring_status', :locals=>{ring: ring} %>
</div>