<% content_for :title do %>
  <%= @user.name %>さんの単語帳一覧 | MeiTian
<% end %>


<div class='visible-xs'>
  <div class="brand-top">
    <div class="brand-top-logo-center overflow"><%= @user.name %>さんの単語帳一覧</div>
  </div>
</div>

<div class="container">
	<section class='user-profile'>
		<!-- ユーザー名前、自己紹介、リンク -->
		<%= render :partial => 'users/user_profile_introduction', :locals=>{user: @user} %>
	</section>


	<hr>
	更新順に表示されます。
	<section class='psr'>
		<div class='psr-content'>
			<% if @passages.present? %>
				<% @passages.each do |passage| %>
					<div class='margin-b-20'>
						<%= link_to passage_path(passage) do %>
							<%= render :partial => 'svg/passage' %>
							<!-- タブレット以上 -->
							<span class='visible-sm-inline visible-lg-inline visible-md-inline'><%= passage.title %></span>
							<!-- スマホサイズ -->
							<span class='visible-xs-inline'><%= passage.title.truncate(15) %></span>
							<!-- ステータスラベル -->
							<% if passage.waiting? %>
								<span class='status-badge badge-black'><%= passage.status_i18n %></span>
							<% elsif passage.working? %>
								<span class='status-badge badge-red'><%= passage.status_i18n %></span>
							<% elsif passage.review_needed? %>
								<span class='status-badge badge-blue'><%= passage.status_i18n %></span>
							<% elsif passage.completed? %>
								<span class='status-badge badge-green'><%= passage.status_i18n %></span>
							<% end %>
						<% end %>
					</div>
				<% end %>
			<% else %>
				<% if @user == current_user %>
					まだ長文がありません！
					<ul>
						<li>
							<%= link_to new_passage_path do %>
								自分で作ってみる
							<% end %>
						</li>
						<li>
							<%= link_to explore_path do %>
								他のユーザーの長文をコピーする
							<% end %>
						</li>
					</ul>
				<% else %>
					まだ長文の投稿はありません。
				<% end %>
			<% end %>
		</div>
	</section>

</div><!-- End of Container -->