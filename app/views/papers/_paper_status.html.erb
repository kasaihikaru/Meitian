<!-- 未着手 -->
<% if paper.waiting? %>
	<%= link_to "未着手", paper_waiting_path(paper), method: :put, class: "status-btn float-left status-on-grey", remote: true %>
<% else %>
	<%= link_to "未着手", paper_waiting_path(paper), method: :put, class: "status-btn float-left status-off-grey", remote: true %>
<% end %>

<!-- 勉強中 -->
<% if paper.working? %>
	<%= link_to "勉強中", paper_working_path(paper), method: :put, class: "status-btn float-left status-on-red", remote: true %>
<% else %>
	<%= link_to "勉強中", paper_working_path(paper), method: :put, class: "status-btn float-left status-off-red", remote: true %>
<% end %>

<!-- 要復習 -->
<% if paper.review_needed? %>
	<%= link_to "要復習", paper_review_needed_path(paper), method: :put, class: "status-btn float-left status-on-blue", remote: true %>
<% else %>
	<%= link_to "要復習", paper_review_needed_path(paper), method: :put, class: "status-btn float-left status-off-blue", remote: true %>
<% end %>

<!-- 完了！ -->
<% if paper.completed? %>
	<%= link_to "完了！", paper_completed_path(paper), method: :put, class: "status-btn float-left status-on-green", remote: true %>
<% else %>
	<%= link_to "完了！", paper_completed_path(paper), method: :put, class: "status-btn float-left status-off-green", remote: true %>
<% end %>