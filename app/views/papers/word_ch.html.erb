<!-- TOPは共通 -->
<%= render :partial => 'papers/papers_show_common', :locals=>{user: @user, paper: @paper} %>


<!-- 単語部分は日中で出しわけ -->
<h1 class="margin-b-40"><%= @paper.name%></h1>

<section class='sentences' id='sentence-ch'>
	<% if @sentences.present? %>
		<!-- 日本語からor中国語から　切り替え選択部分 -->
		<div class='ja-ch-exchange'>
			<div class="row center-align margin-b-20">
				<div class="col-xs-1 center-align">
				</div>
				<%= link_to paper_sentence_ch_path(@paper) do %>
					<div class="col-xs-5 langchange-btn-unselected">
						<% if user_signed_in? && @paper.user_id == current_user.id && @unmemorized_sentences_ch_count > 0 %>
							<span data-badge-top-right="<%= @unmemorized_sentences_ch_count %>">短文（中）</span>
						<% else %>
							短文（中）
						<% end %>
					</div>
				<% end %>
				<%= link_to paper_sentence_ja_path(@paper) do %>
					<div class="col-xs-5 langchange-btn-unselected">
						<% if user_signed_in? && @paper.user_id == current_user.id && @unmemorized_sentences_ja_count > 0 %>
							<span data-badge-top-right="<%= @unmemorized_sentences_ja_count %>">短文（日）</span>
						<% else %>
							短文（日）
						<% end %>
					</div>
				<% end %>
			</div>
			<div class="row center-align margin-b-20">
				<div class="col-xs-1 center-align">
				</div>
				<%= link_to paper_word_ch_path(@paper) do %>
					<div class="col-xs-5 langchange-btn-selected">
						<% if user_signed_in? && @paper.user_id == current_user.id && @unmemorized_words_ch_count > 0 %>
							<span data-badge-top-right="<%= @unmemorized_words_ch_count %>">単語（中）</span>
						<% else %>
							単語（中）
						<% end %>
					</div>
				<% end %>
				<%= link_to paper_word_ja_path(@paper) do %>
					<div class="col-xs-5 langchange-btn-unselected">
						<% if user_signed_in? && @paper.user_id == current_user.id && @unmemorized_words_ja_count > 0 %>
							<span data-badge-top-right="<%= @unmemorized_words_ja_count %>">単語（日）</span>
						<% else %>
							単語（日）
						<% end %>
					</div>
				<% end %>
			</div>
			<!-- チェック外しボタン -->
			<div class="all-uncheck-btn">
				<% if user_signed_in? && @paper.user_id == current_user.id %>
					<%= link_to paper_uncheck_all_words_ch_path(@paper),method: :put do %>
						全てのチェックをはずす
					<% end %>
				<% end %>
			</div>
		</div>
		<%= render :partial => 'render_for_word/s_word_ch_table', :locals=>{paper: @paper, sentences: @sentences} %>
	<% end %>
</section>