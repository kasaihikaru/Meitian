<!-- TOPは共通 -->
<%= render :partial => 'papers/papers_show_common', :locals=>{user: @user, paper: @paper} %>


<section class='sentences' id='sentence-ch'>
	<% if @sentences.present? %>
		<!-- 日or中 短文or単語　切り替え選択部分 -->
		<div class='sentence-or-word'>
			<li>
				<%= link_to paper_sentence_ja_path(@paper) do %>
					<%= render :partial => 'svg/circle' %>短文を勉強
				<% end %>
			</li>
			<li class="selected-list">
				<%= render :partial => 'svg/check_tomato' %>短文中の単語を勉強
			</li>
		</div>
		<div class='lang-change clearfix'>
			<div class='lang-btn lang-btn-ja-selected'>
					日
			</div>
			<%= link_to paper_word_ch_path(@paper) do %>
				<div class='lang-btn lang-btn-ch'>
					中
				</div>
			<% end %>
		</div>

		<% if user_signed_in? && @paper.user_id == current_user.id %>
			<div class='progress-bar-wrapper'>
				<div class='clearfix'>
					<div class='float-left'>
						暗記済み単語&nbsp;<%= @memorized_count %>/<%= @all_count %>
					</div>
					<div class='float-right'>
						<%= link_to paper_uncheck_all_words_ja_path(@paper),method: :put do %>
							全てのチェックをはずす
						<% end %>
					</div>
				</div>
				<div class="progress">
				  <div class="progress-bar" role="progressbar" style="width: <%= @progress %>%;" aria-valuenow="<%= @progress %>" aria-valuemin="0" aria-valuemax="100"><%= @progress %>%</div>
				</div>
			</div>
		<% end %>

		<%= render :partial => 'render_for_word/s_word_ja_table', :locals=>{paper: @paper, sentences: @sentences} %>
	<% end %>
</section>