$("#passage_tab_ch").html("<%= j(render :partial => 'passages/passage_tab_ch', :locals=>{words: @words, passage:@passage}) %>");

// 円グラフ
$(function(){
  var $ppc = $('.progress-pie-chart-ch'),
    percent = parseInt($ppc.data('percent')),
    deg = 360*percent/100;
  if (percent > 50) {
    $ppc.addClass('gt-50');
  }
  $('.ppc-progress-fill-ch').css('transform','rotate('+ deg +'deg)');
  $('.ppc-percents-ch span').html(percent+'%');
});