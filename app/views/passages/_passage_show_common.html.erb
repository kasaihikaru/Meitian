<div class='clearfix'>
	<div class='psr-show-user float-left'>
		<% if user.image? %>
		  <%= image_tag user.image.url, :alt => "icon", :class=>"smallicon center" %>
		<% else %>
			 <img alt="no-icon" src="/images/no-icon.png" class="smallicon">
		<% end %>
	</div>
	<div class='psr-show-user float-left margin-l-10'>
		<%= user.name %>
	</div>
	<div class='edit-btn float-right'>
		<% if user == current_user %>
			<%= link_to edit_passage_path(passage) do %>
				<%= render :partial => 'svg/edit' %>
			<% end %>
		<% elsif user_signed_in? %>
			<%= link_to "コピーして追加", passage_copy_path(passage), method: :post, class: "prim-btn", remote: true %>
		<% end %>
	</div>
</div>
<section class='passage'>
	<div class='passage-title'>
		<%= passage.title %>
	</div>
	<% if words.present? && user == current_user %>
		<div class='word-bar'>
			<div class='clearfix'>
				<div class='float-left'>
					暗記済み単語&nbsp;<%= memorized_words_ch_count %>/<%= all_words_count %>
				</div>
				<div class='float-right'>
					<% if params[:action] == 'word_ch' %>
						<a href="#passage-words-ch">単語帳を開く</a>
					<% end %>
					<% if params[:action] == 'word_ja' %>
						<a href="#passage-words-ja">単語帳を開く</a>
					<% end %>
				</div>
			</div>
			<div class="progress">
			  <div class="progress-bar" role="progressbar" style="width: <%= progress%>%;" aria-valuenow="<%= progress%>" aria-valuemin="0" aria-valuemax="100"><%= progress%>%</div>
			</div>
		</div>
	<% end %>
	<div class='passage-content'>
		<%= simple_format(passage.ch) %>
	</div>
</section>
<% if passage.ja.present? %>
	<section class='passage-ja'>
		<div class='passage-ja-title'>
			日本語訳
		</div>
		<div class='passage-content'>
			<%= simple_format(passage.ja) %>
		</div>
	</section>
<% end %>