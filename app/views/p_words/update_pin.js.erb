$("#p_word_row_ja_<%= @word.id %>").html("<%= j(render :partial => 'render_for_word/p_word_row_ja', :locals=>{passage: @passage, word: @word}) %>");
$("#p_word_row_ch_<%= @word.id %>").html("<%= j(render :partial => 'render_for_word/p_word_row_ch', :locals=>{passage: @passage, word: @word}) %>");


// モーダルを閉じる
$(function() {
  $('body').removeClass('modal-open');
  $('.modal-backdrop').remove();
  $('#pin_edit_modal_ja_<%= @word.id %>').modal('hide');
});
// モーダルを閉じる
$(function() {
  $('body').removeClass('modal-open');
  $('.modal-backdrop').remove();
  $('#pin_edit_modal_ch_<%= @word.id %>').modal('hide');
});