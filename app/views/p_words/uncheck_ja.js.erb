$("#p_word_row_ja_<%= @word.id %>").html("<%= j(render :partial => 'render_for_word/p_word_row_ja', :locals=>{word: @word, passage: @passage}) %>");
$("#progress_bar_render_wrapper_ja").html("<%= j(render :partial => 'render_common/progress_ja', :locals=>{progress: @progress_ja}) %>");
$("#memorized_status_ja").html("<%= j(render :partial => 'render_common/memorized_status', :locals=>{memorized_count: @memorized_count_ja, all_count: @all_count, progress: @progress_ja}) %>");

// 円グラフ
$(function(){
  var $ppc = $('.progress-pie-chart-ja'),
    percent = parseInt($ppc.data('percent')),
    deg = 360*percent/100;
  if (percent > 50) {
    $ppc.addClass('gt-50');
  }
  $('.ppc-progress-fill-ja').css('transform','rotate('+ deg +'deg)');
  $('.ppc-percents-ja span').html(percent+'%');
});