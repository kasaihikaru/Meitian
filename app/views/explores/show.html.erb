<div class='card'>
	他のユーザーの投稿から勉強したいものを見つけて、自分の勉強リストにコピーしましょう！
</div>

<section class='psr'>
	<div class='psr-title'>ユーザー</div>
	<div class='psr-content explore-users'>
		<% @users.each do |user| %>
			<div class='margin-b-20'>
				<%= link_to user_path(user) do %>
					<div class='clearfix'>
						<div class='float-left'>
						  <% if user.image? %>
						    <%= image_tag user.image.url, :alt => "icon" %>
						  <% else %>
								 <img alt="no-icon" src="/images/no-icon.png">
						  <% end %>
						</div>
						<div class='float-left user-name'>
							<%= user.name.truncate(15) %>
						</div>
					</div>
				<% end %>
				<% if user.introduction? %>
					<div class='psr-content-sub'>
						<%= user.introduction.truncate(70) %>
					</div>
				<% end %>
			</div>
		<% end %>
		<div class='psr-link'>
			<%= link_to users_explore_path do %>
				>全てのユーザー(<%= @users_cnt %>)
			<% end %>
		</div>
	</div>
</section>

<section class='psr'>
	<div class='psr-title'>文章</div>
	<div class='psr-content'>
		<% @passages.each do |passage| %>
			<div class='margin-b-20'>
				<%= link_to passage_word_ch_path(passage) do %>
					<%= render :partial => 'svg/passage' %><%= passage.title.truncate(17) %>
				<% end %>
				<div class='psr-content-sub'>
					<%= passage.ch.truncate(70) %>
				</div>
			</div>
		<% end %>
		<div class='psr-link'>
			<%= link_to passages_explore_path do %>
				>全ての文章(<%= @passages_cnt %>)
			<% end %>
		</div>
	</div>
</section>

<section class='psr'>
	<div class='psr-title'>短文集</div>
	<div class='psr-content'>
		<% @papers.each do |paper| %>
			<div class='margin-b-20'>
				<%= link_to paper_sentence_ch_path(paper) do %>
					<%= render :partial => 'svg/paper' %><%= paper.name.truncate(17) %><span class='font-12'>（<%= paper.sentences.count %>）</span>
				<% end %>
			</div>
		<% end %>
		<div class='psr-link'>
			<%= link_to papers_explore_path do %>
				>全ての短文集(<%= @papers_cnt %>)
			<% end %>
		</div>
	</div>
</section>

<section class='psr'>
	<div class='psr-title'>単語帳</div>
	<div class='psr-content'>
		<% @rings.each do |ring| %>
			<div class='margin-b-20'>
				<%= link_to ring_word_ch_path(ring) do %>
					<%= render :partial => 'svg/ring' %><%= ring.name.truncate(17) %><span class='font-12'>（<%= ring.r_words.count %>）</span>
				<% end %>
			</div>
		<% end %>
		<div class='psr-link'>
			<%= link_to rings_explore_path do %>
				>全ての単語帳(<%= @rings_cnt %>)
			<% end %>
		</div>
	</div>
</section>