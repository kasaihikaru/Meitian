<footer class="container-fluid visible-xs">
  <div class="row topline">
    <% if user_signed_in? %>
      <!-- 戻るボタン -->
      <div class="col-xs-3 center-align footer-link">
          <span class="font-14 vertical-top-align"><</span>
          <%= link_to hsk_index_docs_path do %>
            <%= render :partial => 'svg/book' %><br>HSK単語帳一覧
          <% end %>
      </div>
      <!-- スキマ -->
      <div class="col-xs-4 center-align footer-link">
      </div>
      <!-- マイ教材に追加ボタン -->
      <div class="col-xs-5 center-align">
        <div class="prim-mini-btn margin-tb-19 font-12 visible-xs" data-toggle="modal" data-target="#copy_to_mylist_modal">マイ教材に追加</div>
      </div>
    <% else %>
      <!-- 戻るボタン -->
      <div class="col-xs-2 center-align footer-link">
          <span class="font-14 vertical-top-align"><</span>
          <%= link_to hsk_index_docs_path do %>
            <%= render :partial => 'svg/book' %><br>HSK単語帳一覧
          <% end %>
      </div>
      <div class="col-xs-9 center-align">
        <%= link_to new_user_registration_path do %>
          <div class="prim-btn me-registration-btn">登録をして勉強開始！</div>
        <% end %>
      </div>
    <% end %>
  </div>
</footer>